    <body>

        <!-- Top content -->
        <div class="top-content">

            <div class="inner-bg">
                <div class="container">

                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2 text">
                            <h1><strong>CET</strong> Scheduler</h1>
                            <div class="description">
                            	<p>
                                  A portal for teachers and exam department.
                              </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-5">

                        	<div class="form-box">
	                        	<div class="form-top">
	                        		<div class="form-top-left">
	                        			<h3>Login</h3>
	                            		<p>Enter email and password to log on:</p>
	                        		</div>
	                        		<div class="form-top-right">
	                        			<i class="fa fa-key"></i>
	                        		</div>
	                            </div>
	                            <div class="form-bottom">
	                            <form role="form" action="/users/signin" method="post" class="login-form">
	                    	        <div class="form-group">
				                    		  <label class="sr-only" for="login-email">Email</label>
				                        	<input type="email" required="true" name="email" placeholder="Email..." class="email form-control" id="login-email">
				                        </div>
				                        <div class="form-group">
				                        	<label class="sr-only" for="login-pass">Password</label>
				                        	<input type="password" required="true" name="pass" placeholder="Password..." class="pass form-control" id="login-pass">
				                        </div>
				                        <button type="submit" class="btn">Sign in!</button>
		                          </form>
                            <p style="text-align:center; margin-top:10px"><a href="/passwordreset">Forgot password? Click here!</a></p>
			                    </div>
		                    </div>

                        </div>

                        <div class="col-sm-1 middle-border"></div>
                        <div class="col-sm-1"></div>

                        <div class="col-sm-5">

                        	<div class="form-box">
                        		<div class="form-top">
	                        		<div class="form-top-left">
	                        			<h3>Sign up</h3>
	                            		<p>New users register here:</p>
	                        		</div>
	                        		<div class="form-top-right">
	                        			<i class="fa fa-pencil"></i>
	                        		</div>
	                            </div>
	                            <div class="form-bottom">
                                <form role="form" action="/users/signin" method="post" class="login-form">
                                  <div class="form-group">
                                    <label class="sr-only" for="name">Name</label>
                                    <input type="text" required="true" name="name" placeholder="Name..." class="name form-control" id="name">
                                  </div>
                                  <div class="form-group">
                                    <label class="sr-only" for="email">Email</label>
                                    <input type="email" required="true" name="email" placeholder="Email..." class="email form-control" id="email">
                                  </div>
                                  <div class="form-group">
    				                    		  <label class="sr-only" for="phone">Phone</label>
    				                        	<input type="text" required="true" name="phone" placeholder="Phone..." class="phone form-control" id="phone">
			                            </div>
  				                        <div class="form-group">
    				                        	<label class="sr-only" for="pass">Password</label>
    				                        	<input type="password" required="true" name="pass" placeholder="Password..." class="pass form-control" id="pass">
  				                        </div>
  				                        <button type="submit" class="btn">Sign in!</button>
    				                    </form>
	                            </div>
                      	  </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>

